{
    "compilerOptions": {
        "lib": ["ESNext"],
        "target": "ES2022",
        "module": "NodeNext",
        "moduleDetection": "force",

        /* Bundler mode */
        "moduleResolution": "NodeNext",
        /* Linting */
        "skipLibCheck": true,
        "strict": true,
        "noFallthroughCasesInSwitch": true,
        "forceConsistentCasingInFileNames": true,
        "composite": true,
        "baseUrl": "./src",
        "rootDir": "./src",
        "outDir": "./dist"
    },
    "include": ["./src"],
    "exclude": ["./dist"]
}
